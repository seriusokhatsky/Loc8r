.modal-content
	form(id="addReview", ng-submit="vm.onSubmit()", name="addReview", role="form", class="form-horizontal")
		.modal-header
			button(type="button", ng-click="vm.modal.cancel()").close
				span(aria-hidden="true") x
				span.sr-only Close
			h4(id="myModalLabel").modal-title Add your review for {{ vm.locationData.locationName }}

		.modal-body
			.alert.alert-danger(role="alert", ng-show="vm.formError") {{ vm.formError }}
			.form-group
				label.col-xs-10.col-sm-2.control-label(for='rating') Rating
				.col-xs-10.col-sm-2
					select#rating.form-control.input-sm(name='rating', ng-model='vm.formData.rating')
						option 5
						option 4
						option 3
						option 2
						option 1
			.form-group
				label.col-sm-2.control-label(for='review') Review
				.col-sm-10
					textarea#review.form-control(name='review', rows='5', ng-model='vm.formData.reviewText')
		.modal-footer
			button.btn.btn-default(ng-click='vm.modal.cancel()', type='button') Cancel
			button.btn.btn-primary(type='submit') Submit review